<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:id="@+id/offerCard"
    app:cardBackgroundColor="#E12929"
    android:layout_marginTop="5dp"
    android:layout_margin="10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:columnCount="4"
            android:rowCount="5">

            <TextView
                android:id="@+id/intitule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="intitule"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="description"
                android:textColor="@android:color/white"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:background="@color/cardview_shadow_end_color"
                android:src="@drawable/ic_favorite_border_black_24dp" />

            <TextView
                android:id="@+id/salaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:text="salaire"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/typeContrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="typeContrat"
                android:textColor="@android:color/white"/>


        </GridLayout>

        <Button
            android:id="@+id/btnPostuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Postuler" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
